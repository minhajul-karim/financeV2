{% extends "layout.jinja2" %}

{% block title %}
    Log In
{% endblock %}

{% block main %}

<div id="reset_area">
    <h1>Forgot Password?</h1>
    <p class="lead">You can reset your password here.</p>
    <form action="{{ url_for('.password_reset') }}" method="POST">
        {{ form.csrf_token }}
        <div class="form-group">
            {{ form.email( class="form-control", placeholder="Enter Email") }}
            {% if form.email.errors %}
                <ul>
                    {% for error in form.email.errors %}
                        <li><span class="error-message">{{ error }}</span></li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>
        {{ form.submit(class="btn btn-primary") }}
    </form>
</div>
    
{% endblock %}

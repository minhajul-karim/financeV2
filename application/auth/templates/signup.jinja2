{% extends "layout.jinja2" %}

{% block title %}
    Register
{% endblock %}

{% block main %}

<div id="registration-area">
    
    <form action="{{ url_for('.signup') }}" method="POST" id="reg_form">
        {{ form.csrf_token }}

        <!-- First Name -->

        <div class="form-group">
            {{ form.first_name(placeholder="First Name", class="form-control") }}
            {% if form.first_name.errors %}
            <ul>
                {% for error in form.first_name.errors %}
                    <li><span class="error-message">{{ error }}</span></li>
                {% endfor %}
            </ul>
            {% endif %}
        </div>

        <!-- Last Name -->

        <div class="form-group">
            {{ form.last_name(placeholder="Last Name", class="form-control") }}
            {% if form.last_name.errors %}
            <ul>
                {% for error in form.last_name.errors %}
                    <li><span class="error-message">{{ error }}</span></li>
                {% endfor %}
            </ul>
            {% endif %}
        </div>

        <!-- Email -->

        <div class="form-group" id="email_group">
            {{ form.email(placeholder="Email", class="form-control") }}
            {% if form.email.errors %}
            <ul>
                {% for error in form.email.errors %}
                    <li><span class="error-message">{{ error }}</span></li>
                {% endfor %}
            </ul>
            {% endif %}
        </div>

        <!-- Password -->

        <div class="form-group">
            {{ form.password(placeholder="Password", class="form-control") }}
            {% if form.password.errors %}
            <ul>
                {% for error in form.password.errors %}
                    <li><span class="error-message">{{ error }}</span></li>
                {% endfor %}
            </ul>
            {% endif %}
        </div>

        <!-- Confirm Password -->

        <div class="form-group">
            {{ form.confirm_password(placeholder="Confirm Password", class="form-control") }}
            {% if form.confirm_password.errors %}
            <ul>
                {% for error in form.confirm_password.errors %}
                    <li><span class="error-message">{{ error }}</span></li>
                {% endfor %}
            </ul>
            {% endif %}
        </div>

        <!-- Submit -->

        {{ form.submit(class="btn btn-primary") }}
    </form>

    <div id="bottom-text" class="mt-3">
        <p>Already have an account? <a href="#">Log in.</a></p>
    </div>

</div>

{% endblock %}